<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/curved_bg_small_two_full"

    tools:context=".Activities.Code">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"

       android:gravity="center_vertical"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="@dimen/dimen_40"
            android:layout_height="match_parent"
            android:id="@+id/BackArrow"

            android:orientation="horizontal"
            >

            <ImageView

                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:tint="@color/white"
                android:layout_marginLeft="@dimen/dimen_10"
                app:srcCompat="@mipmap/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="right"

            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_10"
                android:id="@+id/Home"

                android:gravity="center">
                <ImageView

                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:tint="@color/bt1"
                    app:srcCompat="@drawable/homee" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_25"
        android:gravity="top"
        android:orientation="vertical"
        android:background="@drawable/curved_bg_small_white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="230dp"
    >
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_gravity="top"
        app:srcCompat="@mipmap/list_iamge_two" />


</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                >

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="@dimen/dimen_200"
                            android:layout_height="@dimen/dimen_200"
                            android:gravity="center"
                            android:background="@drawable/curved_bg_long_white"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:background="@color/black"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/qrcode"
                                    android:layout_width="180dp"
                                    android:layout_height="180dp" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="@dimen/dimen_300"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:gravity="center"
                android:text="Show this code at the event to avail the discount"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_15" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>