<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activities.InfoPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/loaderBg"
        android:visibility="gone"

        android:layout_centerInParent="true">
        <pl.droidsonroids.gif.GifImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loader"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_80">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"

        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="@dimen/dimen_40"
            android:layout_height="match_parent"
            android:id="@+id/BackArrow"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <ImageView

                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:tint="@color/black"
                android:layout_marginLeft="@dimen/dimen_10"
                app:srcCompat="@mipmap/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="right"
            android:background="@color/white"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_10"
                android:id="@+id/Home"

                android:gravity="center">
                <ImageView

                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:tint="@color/bt1"
                    app:srcCompat="@drawable/homee" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:id="@+id/line2"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_below="@+id/listSubCategory"
        android:background="#c0c0c0"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/img"
           android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"

             />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"

        android:layout_marginTop="@dimen/dimen_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/location"
            android:layout_alignParentTop="true"
            android:text=""
            android:gravity="top"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="@dimen/dimen_15"
            android:textColor="@color/gray"
            android:singleLine="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_20"

            android:gravity="right">


            <TextView
                android:id="@+id/location2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:drawableLeft="@mipmap/like_white"
                android:gravity="top"
                android:singleLine="true"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15" />
        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"

            android:layout_alignParentTop="true"
            android:text=""
            android:gravity="top"
            android:textSize="@dimen/dimen_20"

            android:singleLine="true"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_extrabold"

            />
    <TextView

        android:id="@+id/discount"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:fontFamily="@font/poppins_regular"

        android:layout_alignParentTop="true"
        android:text=""
        android:gravity="top"
        android:textSize="@dimen/dimen_20"
        android:textColor="@color/bt1"
        android:singleLine="true"
        />

        <TextView
            android:id="@+id/discount_text"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:fontFamily="@font/poppins_regular"
            android:gravity="top"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/bt1"
            android:textSize="@dimen/dimen_20" />

        <TextView
android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_20"
        android:gravity="top"
        android:fontFamily="@font/poppins_light"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20" />


        <TextView
            android:id="@+id/Website"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_20"
            android:gravity="top"

            android:fontFamily="@font/poppins_light"
            android:text="www.google.com"
            android:textColor="@color/bt1"
            android:textSize="@dimen/dimen_20" />


    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"

        android:layout_marginBottom="@dimen/dimen_20"
        android:background="@drawable/curved_bg_small_two"
        android:gravity="center"
        android:id="@+id/GetDiscount"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/dimen_20"
            app:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/GetDiscount"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:id="@+id/discCode"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/dimen_20"
            app:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/GetDiscount"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>