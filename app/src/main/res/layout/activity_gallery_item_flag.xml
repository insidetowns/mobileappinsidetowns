<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:gravity="center"
    android:id="@+id/llDiscount"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dimen_10"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="@dimen/sp_250"
            android:layout_height="@dimen/sp_250"
            android:layout_marginTop="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_1"
            android:layout_marginRight="@dimen/dimen_1"
            android:layout_weight="1"
            android:gravity="center">

                <ImageView
                    android:id="@+id/id_index_gallery_item_image"
                    android:layout_width="@dimen/sp_250"
                    android:src="@mipmap/beauty"
                    android:scaleType="centerCrop"

                    android:layout_height="@dimen/sp_250"
                    />
        </LinearLayout>




        <TextView
            android:id="@+id/ProductId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="image name"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/Ptype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="image name"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"


            android:gravity="bottom"

            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20"

            android:layout_marginRight="@dimen/dimen_1"
            android:orientation="vertical"

            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/shopImage"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:src="@mipmap/shop_logo"
                    />

                <TextView

                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="image name"
                    android:textSize="@dimen/dimen_20"
                    app:fontFamily="@font/poppins_extrabold"


                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:shadowColor="@color/dark_gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/location"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="xcvxcvxcvcx"
                            android:gravity="top"
                            android:textSize="@dimen/dimen_15"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:shadowColor="@color/dark_gray"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/dimen_20"

                            android:layout_height="wrap_content">


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@mipmap/location"
                                    android:visibility="gone"
                                    android:layout_alignParentTop="true"
                                    android:src="@mipmap/like_red"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="centerInside" />
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/Shop_Name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:text="1234"
                                    android:drawableLeft="@mipmap/like_white"
                                    android:gravity="top"
                                    android:textSize="@dimen/dimen_15"
                                    android:textColor="@color/white"
                                    android:singleLine="true"
                                    android:shadowColor="@color/dark_gray"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="2"
                                    />
                        </LinearLayout>
                </LinearLayout>



        </LinearLayout>

</RelativeLayout>
