<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:theme="@android:style/Theme.NoTitleBar"
    android:id="@+id/reLayout"
    android:background="@android:color/transparent"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="250dp"
        android:background="@drawable/curved_bg_long_btn_white"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_5"

                android:paddingTop="@dimen/dimen_5"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/shareColor"
                android:textSize="@dimen/dimen_15"
                android:textStyle="" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/dimen_10"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/qrcode"

        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:src="@mipmap/no_internet"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"

        android:paddingTop="@dimen/dimen_5"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="@dimen/dimen_20"
        android:textStyle="bold" />
</LinearLayout>



            <TextView
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fname"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@null"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text=""
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/dimen_15" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center"
         android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dimen_25"
            android:background="@mipmap/profile_bg"

            android:layout_marginRight="@dimen/dimen_25"
            android:layout_weight="1">
            <TextView
                android:id="@+id/cancelLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fname"
                android:gravity="center"

                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:text="OK"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/dimen_15" />
        </LinearLayout>






    </LinearLayout>



    </LinearLayout>




</LinearLayout>